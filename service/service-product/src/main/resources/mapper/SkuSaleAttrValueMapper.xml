<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.atguigu.gmall.product.mapper.SkuSaleAttrValueMapper">

    <resultMap id="BaseResultMap" type="com.atguigu.gmall.model.product.SkuSaleAttrValue">
            <id property="id" column="id" jdbcType="BIGINT"/>
            <result property="skuId" column="sku_id" jdbcType="BIGINT"/>
            <result property="spuId" column="spu_id" jdbcType="INTEGER"/>
            <result property="saleAttrValueId" column="sale_attr_value_id" jdbcType="BIGINT"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,sku_id,spu_id,
        sale_attr_value_id
    </sql>
    <resultMap id="ValueSkuVoMap" type="com.atguigu.gmall.model.vo.ValueSkuVo">
        <result property="skuId" column="sku_id"/>
        <result property="skuValues" column="sku_values"/>
    </resultMap>

    <select id="getSpuAllSkuSaleValueJson" resultType="com.atguigu.gmall.model.vo.ValueSkuVo">
        select pkv.sku_id,
        GROUP_CONCAT(DISTINCT pkv.sale_attr_value_id ORDER BY pkv.sale_attr_value_id ASC SEPARATOR '|') sku_values
        from
        (SELECT skav.*,ssav.sale_attr_name,ssav.sale_attr_value_name
        FROM sku_sale_attr_value skav
        left join spu_sale_attr_value ssav
        on  skav.sale_attr_value_id = ssav.id
        WHERE ssav.spu_id = #{spuId}
        ORDER BY skav.sku_id,ssav.base_sale_attr_id,skav.sale_attr_value_id) pkv
        GROUP BY pkv.sku_id
    </select>
</mapper>
